{
  "name": "npm-template",
  "version": "0.0.1",
  "description": "A template for an NPM library",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write --tab-width 4 \"src/**/*.js\"",
    "lint": "./node_modules/.bin/eslint src",
    "lint!": "npm run format && npm run lint",
    "prepare": "node_modules/@babel/cli/bin/babel.js src --out-dir lib",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/*.js": [
      "npm run lint!",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eonuk/npm-template.git"
  },
  "author": "Ian Webb",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eonuk/npm-template/issues"
  },
  "homepage": "https://github.com/eonuk/npm-template#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.6",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1"
  }
}
